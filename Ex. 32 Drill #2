print "Do you want to fishing in option #1, the ocean, or option #2 the river?"

option = raw_input(">")

if option == "1":
	print "Congratulation, we're spear fishing the South Pacific for shellfish. What sounds best?"
	print "1. Mussels and lobsters."
	print "2. Sportfish."

	ocean = raw_input(">")
	
	if ocean == "1":
		print "No need for spears, we'll pick those up"
	elif ocean = "2":
		print "Sharks, rays, and marlin can be lethal watch out"
	else:
		print "You can drive the boat!"
		
elif option == "2":
	print "We are going to fly fish the banks for choice #1 or choice #2!"
	print "1. Trout"
	print "2. Salmon"
	
	choice = raw_input(">")
	
	if choice == "1":
		print "Nymphs are good to tie up"
	elif ocean = "2":
		print "A streamer might work"
	else:
		print "You can watch?"

else:
	print "You only live once"
